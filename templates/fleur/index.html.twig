{% extends 'base.html.twig' %}

{% block title %} Les fleurs {% endblock %}

{% block body %}
	<div class="jumbotron">
		<div class="container">
			<h1 class="display-3">Espace fleurs!</h1>
		</div>
	</div>
	<div class="container">
		<div class="row">
			{% for fleur in fleurs %}
			<div class="col-md-4" style="background-color:{{ fleur.couleur }}">
				<p><small>{{ fleur.createdAt|date('d-m-Y') }}</small></p>
				<h3>{{ fleur.nom }}</h3>
				<p><small class="text-muted"> {{ fleur.bouquet }}</small></p>
				<p>{{ fleur.description }}</p>
				<p>Mangée par : {{ fleur.mangeur.fullName }}</p>
				<p>Cultivée par :
					<ul>
						{# For "fonctionne" comme if #}
						{% for jardinier in fleur.jardiniers %}
							<li>{{ jardinier.fullName }}</li>
							{% else %}	
							<li>M.Nobody</li>
						{% endfor %}
					</ul>
				</p>
				<p><a class="btn btn-secondary" href="#" role="button">View details »</a></p>
				</p>
			</div>
			{% endfor %}
		</div>
	</div>
	<hr>
{% endblock %}
