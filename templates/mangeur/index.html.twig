{% extends 'base.html.twig' %}

{% block title %}Les mangeurs{% endblock %}

{% block body %}
	<div class="jumbotron">
		<div class="container">
			<h1 class="display-3">Les mangeurs !</h1>
		</div>
		{% if isMac %}
    		<h3>We love eating Mac's...RAWR!</h3>
		{% endif %}
	</div>

	<div class="container">
		<div class="row">
			{% for mangeur in mangeurs %}
				{# {{ dump(mangeur.vegetals)}} #}
				<div class="col-md-4">
					<h3>{{ mangeur.nom }}</h3>
					<p>
						<ul>
							<li>{{ mangeur.email }}</li>
							<li>{{ mangeur.adresse }}</li>
							<li>{{ mangeur.description }}</li>
						</ul>
					</p>
					<p>
						<ul>
						{% for vegetal in mangeur.vegetals %}
							<li>{{vegetal.className}}: {{ vegetal.nom }}</li>
						{% endfor %}
						</ul>
					</p>
					<p>{{mangeur.id}}</p>
					<p><a class="btn btn-secondary" href="{{ path('mangeur_show', { id : mangeur.id }) }}" role="button">show</a></p>
				</div>
			{% endfor %}
		</div>
	</div>

    <hr>

    <div class="container">
    	<h3>Les mangeurs de l√©gumes</h3>
		<div class="row">
			{% for mangeur in mangeursLegumes %}
				{# {{ dump(mangeur.vegetals)}} #}
				<div class="col-md-4">
					<h4>{{ mangeur.fullName }}</h4>
					<p>
						{{ mangeur.prenom }} mange
						{% for vegetal in mangeur.vegetals %}
							{% if vegetal.className  == 'Legume' %}
							 {{ vegetal.nom }}
							{% endif %}
						{% endfor %} 
					</p>
				</div>
			{% endfor %}

		</div>
	</div>



{% endblock %}
