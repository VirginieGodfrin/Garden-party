{% extends 'base.html.twig' %}

{% block title %} Au jardin {% endblock %}

{% block body %}
	<div class="jumbotron">
		<div class="container">
			<h1 class="display-3">
				{{ 'pageTitle'|trans({},'jardinierIndex')|title }}
			</h1>
		</div>
	</div>

	<div class="container">
		<h2>{{ 'pageTitle'|trans({},'jardinierIndex')|title }}</h2>
	    <div class="row">
	     {% for jardinier in jardiniers %}
			<div class="col-md-4">
				<h3>{{ jardinier.fullName }}</h3>
				<p>{{ jardinier.description }}</p>
				<p>
					<ul>
						<li>Outil: {{ jardinier.outil }}</li>
						<li>Mission: {{ jardinier.mission }}</li>
					</ul>
				</p>
				<p>
					Vegétaux cultivés:
					<ul>
						{% for vegetal in jardinier.vegetals %}
							<li> {{ vegetal.nom }} ( {{ vegetal.className }} )</li>
						{% endfor %}
					</ul>
				</p>
			</div>
			{% endfor %}
		</div>
	</div>

    <hr>

    <div class="container">
		<div class="row">
			<div class="col-md-4">
				<h3>{{ 'pageTitle'|trans({},'jardinierIndex')|title }}</h3>
				{% for jardinier in jardiniers %}
					<h4>{{ jardinier.fullName }}</h4>
				{% endfor %}
	      	</div>
			<div class="col-md-4">
				<h3>{{ 'title1'|trans({},'jardinierIndex')|title }}</h3>
				{% for jardiFleur in jardiniersFleur %}
					<h4>{{ jardiFleur.fullName }}</h4>
				{% endfor %}
			</div>
	      	<div class="col-md-4">
				<h3>{{ 'title2'|trans({},'jardinierIndex')|title }}</h3>
				{% for jardiArbre in jardiniersArbre %}
					<h4>{{ jardiArbre.fullName }}</h4>
				{% endfor %}
			</div>
		</div>
	</div>    

    <hr>

{% endblock %}
